<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.java.group37.newsapp.ShowDetails"
    tools:showIn="@layout/activity_show_details"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v4.widget.NestedScrollView
        android:background="@color/color_white"
        android:id="@+id/DetailedNewsScroll"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white">

            <HorizontalScrollView
                android:id="@+id/PictureScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/Pictures"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/NewsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/color_0babd1"
                android:background="@color/color_white"
                android:textSize="24sp"
                android:layout_margin="20dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="2dp" />

            <TextView
                android:id="@+id/SplitingLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--------------------------------------------------------------------------"
                android:textAlignment="center"
                android:background="@color/color_white"
                android:textColor="@color/color_2b2b2b"/>

            <TextView
                android:id="@+id/NewsDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/color_white"
                android:lineSpacingMultiplier="1.5"
                android:text="Hello World!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_2b2b2b"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="103dp" />

            <TextView
                android:id="@+id/RecommendHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="推荐新闻\n---------------------------------------------"
                android:textSize="12sp" />

            <ListView
                android:id="@+id/RecommendList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
